{
  "extends": "tslint-config-standard",
  "rules": {
    "indent": [
      true,
      "spaces"
    ],
    "ter-indent": [
      true,
      2,
      {
        "SwitchCase": 1
      }
    ],
    "triple-equals": [
      false
    ],
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "always",
        "named": "never",
        "asyncArrow": "ignore"
      }
    ]
  }
}